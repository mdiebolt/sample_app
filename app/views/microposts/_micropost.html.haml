%tr
  %td.micropost
    %span.content
      = micropost.content
    %span.timestamp
      Posted #{ time_ago_in_words(micropost.created_at) } ago.
      - if current_user?(micropost.user)
        %td
          = link_to "delete", user_micropost_path(current_user, micropost), :method => :delete, :confirm => "You sure?", :title => micropost.content
